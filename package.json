{
  "private": true,
  "scripts": {
    "clean": "rimraf '*.log'",
    "fix": "prettier-standard 'scripts/**/*.js' 'test/**/*.js'",
    "lint": "standard 'scripts/**/*.js' 'test/**/*.js'",
    "test": "ava 'test/**/*.js'",
    "toc": "node scripts/insert-toc.js"
  },
  "devDependencies": {
    "ava": "^3.7.1",
    "fs-extra": "^9.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "markdown-toc": "^1.2.0",
    "prettier-standard": "^16.2.1",
    "rimraf": "^3.0.2",
    "standard": "^14.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard"
    ]
  }
}
